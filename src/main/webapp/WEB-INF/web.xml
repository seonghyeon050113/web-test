<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>web-test</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>foodInfoServlet</servlet-name>
		<servlet-class>com.web.controller.FoodInfoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userInfoServlet</servlet-name>
		<servlet-class>com.web.controller.FoodInfoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>gameInfoServlet</servlet-name>
		<servlet-class>com.web.controller.FoodInfoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>foodInfoServlet</servlet-name>
	<url-pattern>/foods</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>userInfoServlet</servlet-name>
	<url-pattern>/users</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>gameInfoServlet</servlet-name>
	<url-pattern>/games</url-pattern>
	</servlet-mapping>
</web-app>